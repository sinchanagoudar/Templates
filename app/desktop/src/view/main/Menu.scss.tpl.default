.main-menu {
    .x-dataview-item {
        cursor: pointer;
        display: flex;
        position: relative;

        .icon {
            display: inline-block;
            font-size: 25px;
            line-height: 3;
            margin-right: 16px;
            height: 50px;
            width: 50px;
            text-align: center;
            vertical-align: middle;

            .x-big & {
                font-size: 21px;
                margin-right: 18px;
                height: 21px;
                width: 21px;
            }
        }
    }

    .x-dataview-dark {
        border-bottom: 2px solid contrasted(#353535, 5%);
    }
}
